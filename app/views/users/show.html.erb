<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
        <div class=profile-info>
            <p>職業：<%= @user.job %></p>
            <p>メールアドレス：<%= @user.email %></p>
            <p>居住地：<%= @user.place %></p>
            <p>自己紹介 <%= @user.selfintroduction %></p>
        </div>
    </section>
  </aside>
    <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
    <p>If you want to edit your profile <%= link_to "check here", edit_user_path %></p>
</div>